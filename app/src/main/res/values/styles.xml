<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyButtonGreen" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@color/material_green_700</item>
        <item name="colorButtonNormal">@color/material_green_900</item>
    </style>

    <style name="MyButtonBlue" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/material_blue_700</item>
        <item name="colorButtonNormal">@color/material_blue_900</item>
    </style>

</resources>
